@model IEnumerable<Movie>

@{
	ViewData["Title"] = "Cinema List";
}
<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 col-x5-6 border-primary mb-3">
			<div class="card mb-3" style="max-width:540px">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white bg-info">
							<p class="card-text">
								<h5 class="card-title">
									@Html.DisplayFor(modelItem=>item.Name)
									<a class="text-white float-right"><i class="bg bi-pencil-square"></i></a>
								</h5>

							</p>
						</div>
					</div>
					<div class="col-md-6">
						<img src="@item.ImageURL" width="100%" alt="@item.Name">
					</div>
					<div class="col-md-6">
						<div class="card-body">
							<p class="card-text"> <b>Description</b>@Html.DisplayFor(m=>item.Description)</p>
							<p class="card-text"><b>Cinema</b><img class="rounded-circle" src="@item.Cinema.Logo" style="max-height:30px; max-width:30px" /></p>
							<p class="card-text"><b>Category</b>@Html.DisplayFor(m=>item.MovieCategory)</p>
							<p class="card-text"><b>Start Date</b>@item.StartDate.ToString("dd-MMM-yyyy")</p>
							<p class="card-text"><b>End Date</b>@item.EndDate.ToString("dd-MMM-yyyy")</p>
							<p class="card-text">
								<b>Status:</b>
								@if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
								{
									<span class="badge bg-success">AVAILABLE</span>
								}
								else if (DateTime.Now < item.StartDate)
								{
									<span class=" badge bg-info">COMING SOON</span>
								}
								else if (DateTime.Now > item.EndDate)
								{
									<span class="badge bg-danger">Expired!</span>
								}
							</p>
						</div>
					</div>
					<div class="col-md-12">
						<div class="card-footer">
							<p class="card-text">
								<a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
								<a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart Price: @item.Price.ToString("c")</a>
							</p>
						</div>
					</div>
				</div>
			</div>

		</div>

	}
</div>
